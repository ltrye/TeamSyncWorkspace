@page
@model TeamSyncWorkspace.Pages.Account.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-4">
            <div class="card mb-4 shadow">
                <div class="card-body text-center">
                    <img src="https://ui-avatars.com/api/?name=@(Uri.EscapeDataString($"{Model.CurrentUser.FirstName} {Model.CurrentUser.LastName}"))&size=90&background=random" 
                         alt="avatar" class="rounded-circle img-fluid mb-3" style="width: 150px; height: 150px;" />
                    <h5 class="my-3">@Model.CurrentUser.FirstName @Model.CurrentUser.LastName</h5>
                    <p class="text-muted mb-1">@Model.CurrentUser.Email</p>
                    <div class="d-flex justify-content-center mt-4">
                        <form method="post" asp-page-handler="Logout">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-box-arrow-right me-2"></i>Logout
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Profile Details</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.StatusMessage))
                    {
                        <div class="alert @(Model.StatusMessage.Contains("error") ? "alert-danger" : "alert-success") alert-dismissible fade show" role="alert">
                            @Model.StatusMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <form method="post" asp-page-handler="UpdateProfile">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <label asp-for="Input.FirstName" class="form-label">First Name</label>
                            </div>
                            <div class="col-sm-9">
                                <input asp-for="Input.FirstName" class="form-control" />
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <label asp-for="Input.LastName" class="form-label">Last Name</label>
                            </div>
                            <div class="col-sm-9">
                                <input asp-for="Input.LastName" class="form-control" />
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <label asp-for="Input.Email" class="form-label">Email</label>
                            </div>
                            <div class="col-sm-9">
                                <input asp-for="Input.Email" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-9 offset-sm-3">
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Account Security</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <p class="mb-0">Password</p>
                        </div>
                        <div class="col-sm-9 d-flex align-items-center justify-content-between">
                            <p class="text-muted mb-0">••••••••</p>
                            <a asp-page="./ChangePassword" class="btn btn-outline-primary btn-sm">Change Password</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Connected Accounts</p>
                        </div>
                        <div class="col-sm-9 d-flex align-items-center">
                            <div class="d-flex gap-2">
                                @if (await Model.HasPasswordAsync(Model.CurrentUser))
                                {
                                    <span class="badge bg-secondary">Password Login</span>
                                }
                                @foreach (var login in await Model.GetLoginsAsync(Model.CurrentUser))
                                {
                                    @if (login.LoginProvider == "Google")
                                    {
                                        <span class="badge bg-danger">Google</span>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}