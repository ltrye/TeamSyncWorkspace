@page
@model TeamSyncWorkspace.Pages.Teams.CreateModel
@{
    ViewData["Title"] = "Create or Join a Team";
}

<div class="container">
    <div class="row justify-content-center mb-4">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.StatusMessage))
                    {
                        <div class="alert @(Model.StatusMessage.Contains("success") ? "alert-success" : "alert-danger")">
                            @Model.StatusMessage
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6">
                            <div class="p-3">
                                <h4 class="mb-3">Create a New Team</h4>
                                <form id="create-team-form" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="Input.TeamName" class="form-control" aria-required="true" />
                                        <label asp-for="Input.TeamName"></label>
                                        <span asp-validation-for="Input.TeamName" class="text-danger"></span>
                                    </div>
                                    <div class="d-grid gap-2">
                                        <button type="submit" class="btn btn-primary">Create Team</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-md-6 border-start">
                            <div class="p-3">
                                <h4 class="mb-3">Join an Existing Team</h4>
                                <p class="text-muted">To join a team, you need to receive an invitation link from a team admin.</p>
                                <div class="d-grid gap-2">
                                    <button class="btn btn-outline-primary disabled">
                                        <i class="bi bi-link-45deg"></i> Enter Invitation Link
                                    </button>
                                    <small class="text-muted text-center">(Coming Soon)</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model.UserTeams != null && Model.UserTeams.Any())
    {
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-light">
                        <h3 class="mb-0">Your Teams</h3>
                    </div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush">
                            @foreach (var team in Model.UserTeams)
                            {
                                <a asp-page="/Dashboard/Index" asp-route-teamId="@team.TeamId" 
                                   class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    <div>
                                        <h5 class="mb-1">@team.TeamName</h5>
                                        <p class="mb-1 text-muted">Created @team.CreatedDate.ToString("MMM dd, yyyy")</p>
                                    </div>
                                    <span class="badge bg-primary rounded-pill">
                                        <i class="bi bi-arrow-right"></i>
                                    </span>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}