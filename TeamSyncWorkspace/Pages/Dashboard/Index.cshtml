@page
@model TeamSyncWorkspace.Pages.Dashboard.IndexModel
@{
    ViewData["Title"] = $"{Model.Team.TeamName} Dashboard";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1>@Model.Team.TeamName</h1>
                <span class="badge bg-secondary">Created @Model.Team.CreatedDate.ToString("MMMM dd, yyyy")</span>
            </div>
            <p class="text-muted">Team Dashboard</p>
            @if (!string.IsNullOrEmpty(Model.StatusMessage))
            {
                <div class="alert @(Model.StatusMessage.StartsWith("Error") ? "alert-danger" : "alert-success")">
                    @Model.StatusMessage
                </div>
            }
        </div>
    </div>

    <div class="row">
        <!-- Left sidebar with team members -->
        <div class="col-md-3">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Team Members</h5>
                    <span class="badge bg-light text-primary">@Model.TeamMembers.Count</span>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        @foreach (var member in Model.TeamMembers)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <img src="https://ui-avatars.com/api/?name=@(Uri.EscapeDataString($"{member.User.FirstName} {member.User.LastName}"))&size=32&background=random" 
                                         class="rounded-circle me-2" alt="Avatar" />
                                    @member.User.FirstName @member.User.LastName
                                    @if (member.UserId == Model.TeamMembers.First().UserId)
                                    {
                                        <span class="badge bg-primary ms-1">Admin</span>
                                    }
                                </div>
                                <small class="text-muted">Joined @member.JoinedDate.ToString("MMM dd")</small>
                            </li>
                        }
                    </ul>
                </div>
                @if (Model.IsTeamAdmin)
                {
                    <div class="card-footer bg-light">
                        <form method="post" asp-page-handler="Invite" asp-route-teamId="@Model.Team.TeamId">
                            <div class="input-group">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <input type="email" asp-for="InviteEmail" class="form-control" placeholder="Email to invite" required>
                               <input type="hidden" name="teamId" value="@Model.Team.TeamId" />
                                <button type="submit" class="btn btn-primary">Invite</button>
                            </div>
                        </form>
                    </div>
                }
            </div>
        </div>

        <!-- Main content with workspace navigation tiles -->
        <div class="col-md-9">
            <!-- Workspace Section -->
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Workspace</h5>
                    <span class="badge bg-light text-primary">ID: @Model.Workspace?.WorkspaceId.Substring(0, 8)</span>
                </div>
                <div class="card-body">
                    @if (Model.Workspace == null)
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-folder-x display-1 text-muted"></i>
                            <p class="mt-3">Workspace not found. Please contact an administrator.</p>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex justify-content-between align-items-start mb-4">
                            <div>
                                <h3>@Model.Workspace.WorkspaceName</h3>
                                <p class="text-muted">@Model.Workspace.Description</p>
                                <p class="text-muted small">Created on @Model.Workspace.CreatedDate.ToString("MMMM dd, yyyy")</p>
                            </div>
                            @if (Model.IsTeamAdmin)
                            {
                                <a href="#" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editWorkspaceModal">
                                    <i class="bi bi-pencil-square"></i> Edit Workspace
                                </a>
                            }
                        </div>
                        
                        <div class="row g-4">
                            <div class="col-md-4">
                                <div class="card h-100 hover-card">
                                    <div class="card-body text-center">
                                        <div class="display-1 mb-3 text-primary">
                                            <i class="bi bi-file-earmark-text"></i>
                                        </div>
                                        <h5 class="card-title">Collaboration docs</h5>
                                        <p class="card-text">Collaborate on documents with your team.</p>
                                        <a href="/Documents/Index?workspaceId=@Model.Workspace.WorkspaceId" class="btn btn-primary">View Documents</a>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-4">
                                <div class="card h-100 hover-card">
                                    <div class="card-body text-center">
                                        <div class="display-1 mb-3 text-success">
                                            <i class="bi bi-folder2-open"></i>
                                        </div>
                                        <h5 class="card-title">Team drive</h5>
                                        <p class="card-text">Access and share files with your team.</p>
                                        <a href="/Files/Index?workspaceId=@Model.Workspace.WorkspaceId" class="btn btn-success">Browse Files</a>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-4">
                                <div class="card h-100 hover-card">
                                    <div class="card-body text-center">
                                        <div class="display-1 mb-3 text-danger">
                                            <i class="bi bi-calendar-check"></i>
                                        </div>
                                        <h5 class="card-title">Timeline</h5>
                                        <p class="card-text">View and manage tasks and deadlines.</p>
                                        <a href="/Timeline/Index?workspaceId=@Model.Workspace.WorkspaceId" class="btn btn-danger">Open Timeline</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Add Edit Workspace Modal -->
            @if (Model.IsTeamAdmin)
            {
                <div class="modal fade" id="editWorkspaceModal" tabindex="-1" aria-labelledby="editWorkspaceModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <form method="post" asp-page-handler="UpdateWorkspace" asp-route-teamId="@Model.Team.TeamId">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="editWorkspaceModalLabel">Edit Workspace</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <input type="hidden" name="WorkspaceId" value="@Model.Workspace?.WorkspaceId" />
                                    <div class="mb-3">
                                        <label for="workspaceName" class="form-label">Workspace Name</label>
                                        <input type="text" class="form-control" id="workspaceName" name="WorkspaceName" value="@Model.Workspace?.WorkspaceName" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="workspaceDescription" class="form-label">Description</label>
                                        <textarea class="form-control" id="workspaceDescription" name="Description" rows="3">@Model.Workspace?.Description</textarea>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-primary">Save Changes</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Add this to the Team Management section of Dashboard/Index.cshtml -->
    @if (Model.IsTeamAdmin)
    {
        <div class="list-group mb-4">
            <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                <div>
                    <i class="bi bi-people me-2"></i> Members
                    <small class="text-muted d-block">Manage team members</small>
                </div>
                <span class="badge bg-primary rounded-pill">@Model.TeamMembers.Count</span>
            </a>
            <a href="/Teams/Roles/Index?teamId=@Model.Team.TeamId" class="list-group-item list-group-item-action">
                <i class="bi bi-shield-lock me-2"></i> Roles & Permissions
                <small class="text-muted d-block">Manage team roles and permissions</small>
            </a>
            <a href="#" class="list-group-item list-group-item-action">
                <i class="bi bi-gear me-2"></i> Team Settings
                <small class="text-muted d-block">Edit team settings</small>
            </a>
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .hover-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }
    </style>
}

@section Scripts {
    <script>
        // Any JavaScript you need can go here
    </script>
}